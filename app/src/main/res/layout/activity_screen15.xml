<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.generalmobile.ecommerce.screens.screen15.Screen15Activity">

    <include
        android:id="@+id/navigation_view"
        layout="@layout/navigation_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/textView15_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="label" />

        <EditText
            android:id="@+id/editText15_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15_1"
            android:hint="Some Text."
            android:paddingStart="8dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/textView15_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText15_1"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:text="label" />

        <EditText
            android:id="@+id/editText15_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15_2"
            android:hint="Some Text."
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="sometext" />

        <TextView
            android:id="@+id/textView15_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText15_2"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:text="label" />

        <Spinner
            android:id="@+id/spinnerState1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15_3"
            android:layout_marginTop="10dp"
            android:text="Options" />

        <LinearLayout
            android:id="@+id/linearLayout15_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerState1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:text="label" />

            <TextView
                android:id="@+id/textView15_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="184dp"
                android:paddingTop="16dp"
                android:text="label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout15_1"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinnerState2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingTop="16dp"
                android:text="Options" />
            <Spinner
                android:id="@+id/spinnerState3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginStart="174dp"
                android:paddingTop="16dp"
                android:text="Options" />



        </LinearLayout>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>